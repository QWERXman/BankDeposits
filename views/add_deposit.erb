<div class="grid-x grid-padding-x">
  <div class="large-12 cell">
    <h3>
      Введите данные для добавленя вклада
    </h3>
  </div>
</div>

<form method="post">
  <div class="grid-x grid-padding-x">
    <div class="medium-3 cell">
      <label>Название
        <input type="text" placeholder="Название" name="name" required>
      </label>
    </div>
    <div class="medium-2 cell">
      <label>Процент
        <input type="text" placeholder="12" name="percent" required pattern="^[0-9]+.?[0-9]+$">
      </label>
    </div>
    <div class="medium-2 cell">
      <label>Id вкладчика
        <input type="text" placeholder="5" name="depositor_id" required pattern="^[0-9]+$">
      </label>
    </div>
    <div class="medium-2 cell">
      <label>Баланс
        <input type="text" placeholder="320" name="balance" required pattern="^[0-9]+.?[0-9]+$">
      </label>
    </div>
    <div class="medium-3 cell">
      <label>Дата
        <input type="text" placeholder="01.01.12" name="date" required pattern="^[0-9]{2}.[0-9]{2}.[0-9]{2}$">
      </label>
    </div>
  </div>
  <div class="grid-x grid-padding-x">
    <div class="lagre-12 cell">
      <input type="submit" value="Добавить" class="button success">
    </div>
  </div>
</form>
